{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "nvm install 22 nvm use 22 && yarn run dev",
      "name": "Run npm run dev",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/app/",
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "FirecREST Web UI",
      "runtimeExecutable": "yarn",
      "cwd": "${workspaceFolder}/app/",
      "runtimeArgs": [
          "dev:debug"
      ],
      "port": 5858,
      "stopOnEntry": true
    }
  ]
}
